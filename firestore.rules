rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user_id} {
      // if its not equal to null that means im logged in and therefore im allow to read,create
      allow read,create : if request.auth != null;
      //if the id of the user who make the request is equal to id of the document that means they own the document and they can update
      allow update : if request.auth.uid == user_id;
    }
      match/projects/{project_id} {
        allow read,create , update: if request.auth != null;
        // allow to delete if the id is equal to the id who created this document
        allow delete : if request.auth.uid == resource.data.createdBy.id;

      }
  }
}




//         users collection        //
// any authenticated user can read&create
//only users who "own\created" a document can update it (user id's match)


//       projects collection //
// any authenticated user can read create and update a document
//only users who "own\created" a document can delete it
